{
  "name": "fab-5-engine",
  "version": "1.0.0",
  "description": "",
  "engines": {
    "node": ">=12.18"
  },
  "engineStrict": true,
  "author": "Tyson Mote <tyson@segment.com>",
  "license": "UNLICENSED",
  "main": "src/boot.js",
  "scripts": {
    "lint": "eslint '**/*.ts'",
    "start": "yarn build && node dist/src/boot.js",
    "dev-typescript": "tsc --watch --preserveWatchOutput",
    "dev-server": "NODE_ENV=development nodemon --inspect=47082 --watch dist dist/src/boot.js",
    "dev": "yarn build && concurrently 'yarn dev-typescript' 'yarn dev-server'",
    "build": "tsc",
    "test": "jest"
  },
  "devDependencies": {
    "@types/express": "^4.17.8",
    "@types/http-errors": "^1.8.0",
    "@types/jest": "^26.0.14",
    "@types/lodash": "^4.14.161",
    "@types/node": "^12.12.11",
    "@types/whatwg-mimetype": "^2.1.0",
    "@typescript-eslint/eslint-plugin": "^4.3.0",
    "@typescript-eslint/parser": "^4.3.0",
    "concurrently": "^5.0.0",
    "eslint": "^7.8.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^24.0.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "lint-staged": "^10.3.0",
    "nodemon": "^2.0.4",
    "prettier": "^1.19.1",
    "prompts": "^2.3.2",
    "ts-jest": "^26.4.1",
    "ts-node": "^9.0.0",
    "typescript": "^3.9.2",
    "yargs": "^15.4.1"
  },
  "dependencies": {
    "@segment/ajv-human-errors": "^1.1.0",
    "@segment/blocked-stats": "^2.2.0",
    "@segment/express-stats": "^1.3.1",
    "@segment/fab5-subscriptions": "^0.1.0",
    "ajv": "^6.12.4",
    "array.prototype.flatmap": "^1.2.3",
    "ecs-logs-js": "^1.0.0",
    "express": "^4.17.1",
    "got": "^11.6.1",
    "http-errors": "^1.8.0",
    "jsonpath-plus": "^4.0.0",
    "lodash": "^4.17.20",
    "markdown-toc": "^1.2.0",
    "moment": "^2.27.0",
    "mustache": "^4.0.1",
    "node-cache": "^5.1.2",
    "uuid": "^8.3.0",
    "whatwg-mimetype": "^2.3.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{yml,md,json}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 120
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/"
    ],
    "moduleNameMapper": {
      "@/(.+)": "<rootdir>/../../$1"
    },
    "forceExit": true
  }
}
