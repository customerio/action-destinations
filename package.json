{
  "name": "@segment/destination-actions",
  "version": "1.0.0-0",
  "description": "Destination Actions engine and definitions.",
  "repository": {
    "type": "git",
    "url": "https://github.com/segmentio/fab-5-engine"
  },
  "engines": {
    "node": ">=10"
  },
  "engineStrict": true,
  "license": "UNLICENSED",
  "main": "package/src/destinations/index.js",
  "types": "package/src/destinations/index.d.ts",
  "scripts": {
    "lint": "eslint '**/*.ts'",
    "start": "yarn build && node dist/src/app.js",
    "dev-typescript": "tsc --watch --preserveWatchOutput",
    "dev-server": "NODE_ENV=development nodemon --inspect=47082 --watch dist dist/src/app.js",
    "dev-ops-server": "NODE_ENV=developement nodemon --inspect=47082 --watch dist dist/src/ops/server.js",
    "dev-ops": "yarn build && concurrently 'yarn dev-typescript' 'yarn dev-ops-server'",
    "dev": "yarn build && concurrently 'yarn dev-typescript' 'yarn dev-server'",
    "build": "yarn generate-types && tsc --project tsconfig.prod.json",
    "build:package": "yarn generate-types && rm -rf ./package && tsc --project tsconfig.package.json && tsc-alias --project tsconfig.package.json",
    "prepublishOnly": "yarn build:package",
    "release": "yarn np",
    "test": "jest",
    "generate-action": "ts-node --files scripts/generate-action",
    "generate-types": "ts-node --transpile-only --files scripts/generate-types",
    "create:action": "ts-node scripts/create-action",
    "create:destination": "ts-node scripts/create-destination",
    "sync-json-schemas": "ts-node --files scripts/sync-json-schemas"
  },
  "devDependencies": {
    "@types/express": "^4.17.8",
    "@types/http-errors": "^1.8.0",
    "@types/ip": "^1.1.0",
    "@types/jest": "^26.0.15",
    "@types/json-schema": "^7.0.6",
    "@types/lodash": "^4.14.165",
    "@types/module-alias": "^2.0.0",
    "@types/mustache": "^4.0.1",
    "@types/node": "^12.12.11",
    "@types/prompts": "^2.0.9",
    "@types/test-listen": "^1.1.0",
    "@types/uuid": "^8.3.0",
    "@types/whatwg-mimetype": "^2.1.0",
    "@typescript-eslint/eslint-plugin": "^4.7.0",
    "@typescript-eslint/parser": "^4.7.0",
    "chalk": "^4.1.0",
    "clipboardy": "^2.3.0",
    "concurrently": "^5.0.0",
    "eslint": "^7.13.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-config-standard": "^16.0.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^24.0.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.2",
    "execa": "^4.1.0",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "json-schema-to-typescript": "^9.1.1",
    "lint-staged": "^10.5.1",
    "nock": "^13.0.4",
    "nodemon": "^2.0.4",
    "np": "^6.0.0",
    "ora": "^5.1.0",
    "prettier": "^2.1.2",
    "prompts": "^2.4.0",
    "slugify": "^1.4.6",
    "test-listen": "^1.1.0",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.0.0",
    "tsc-alias": "^1.2.2",
    "typescript": "^4.0.5"
  },
  "dependencies": {
    "@segment/ajv-human-errors": "^1.1.0",
    "@segment/blocked-stats": "^2.2.0",
    "@segment/control-plane-service-client": "ssh://git@github.com:segmentio/control-plane-service-js-client#master",
    "@segment/express-stats": "^1.3.1",
    "@segment/fab5-subscriptions": "^1.0.0",
    "@sentry/integrations": "^5.27.3",
    "@sentry/node": "^5.27.3",
    "aggregate-error": "^3.1.0",
    "ajv": "^6.12.4",
    "dayjs": "^1.9.5",
    "ecs-logs-js": "^1.0.0",
    "express": "^4.17.1",
    "got": "^11.8.0",
    "http-errors": "^1.8.0",
    "ip": "^1.1.5",
    "jsonpath-plus": "^4.0.0",
    "lodash": "^4.17.20",
    "module-alias": "^2.2.2",
    "mustache": "^4.0.1",
    "node-cache": "^5.1.2",
    "ow": "^0.19.0",
    "ts-custom-error": "^3.2.0",
    "uuid": "^8.3.0",
    "whatwg-mimetype": "^2.3.0"
  },
  "publishConfig": {
    "access": "restricted"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "!(templates)/**/*.ts": [
      "eslint --fix",
      "prettier --write",
      "yarn generate-types"
    ],
    "*.{yml,md,json}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none",
    "printWidth": 120
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/"
    ],
    "moduleNameMapper": {
      "@/(.+)": "<rootDir>/src/$1"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/test/setup-after-env.ts"
    ],
    "forceExit": true
  }
}
