{
  "name": "fab-5-engine",
  "private": true,
  "license": "UNLICENSED",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "build": "yarn generate-types && yarn workspaces run build",
    "build:watch": "concurrently 'yarn engine build:watch' 'yarn server build:watch'",
    "cli": "yarn workspace @segment/destination-actions-cli",
    "dev": "yarn build && concurrently 'yarn build:watch' 'yarn server dev'",
    "dev:ops": "yarn build && concurrently 'yarn build:watch' 'yarn server dev:ops'",
    "engine": "yarn workspace @segment/destination-actions",
    "generate-types": "yarn cli generate-types",
    "lint": "eslint '**/*.ts'",
    "prepare": "ts-node --project ./tsconfig.base.json ./scripts/configure-references.ts",
    "prepublishOnly": "yarn build",
    "server": "yarn workspace @segment/destination-actions-server",
    "start": "yarn build && yarn workspace @segment/destination-actions-server start",
    "test": "yarn workspaces run test",
    "typecheck": "yarn workspaces run typecheck"
  },
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.14.0",
    "concurrently": "^5.3.0",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-config-standard": "^16.0.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^24.0.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.2",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "!(templates)/**/*.ts": [
      "yarn cli generate-types",
      "eslint --fix",
      "prettier --write"
    ],
    "*.{yml,md,json}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none",
    "printWidth": 120
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "forceExit": true
  }
}
