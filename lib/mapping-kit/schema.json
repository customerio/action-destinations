{
  "$schema": "http://json-schema.org/schema#",
  "title": "Fab 5 mapping definition",
  "description": "A Fab 5 mapping is either a raw JSON value (object, string, etc.) or a directive, which is a mapping/transformation instruction that reduces to a raw JSON value.",
  "if": {
    "type": "object",
    "minProperties": 1,
    "propertyNames": {
      "pattern": "^@"
    }
  },
  "then": {
    "$ref": "#/definitions/directive"
  },
  "else": {
    "$ref": "#/definitions/raw"
  },
  "definitions": {
    "raw": {
      "oneOf": [
        {
          "$ref": "#/definitions/raw:object"
        },
        {
          "not": {
            "type": "object"
          }
        }
      ]
    },
    "raw:object": {
      "type": "object",
      "propertyNames": {
        "pattern": "^[^@]"
      },
      "additionalProperties": {
        "oneOf": [
          {
            "$ref": "#/definitions/directive"
          },
          {
            "$ref": "#/definitions/raw"
          }
        ]
      }
    },
    "directive": {
      "type": "object",
      "minProperties": 1,
      "maxProperties": 1,
      "oneOf": [
        {
          "$ref": "#/definitions/directive:base64"
        },
        {
          "$ref": "#/definitions/directive:field"
        },
        {
          "$ref": "#/definitions/directive:handlebars"
        },
        {
          "$ref": "#/definitions/directive:lowercase"
        },
        {
          "$ref": "#/definitions/directive:merge"
        },
        {
          "$ref": "#/definitions/directive:omit"
        },
        {
          "$ref": "#/definitions/directive:root"
        },
        {
          "$ref": "#/definitions/directive:pick"
        },
        {
          "$ref": "#/definitions/directive:timestamp"
        }
      ]
    },
    "directive:base64": {
      "type": "object",
      "properties": {
        "@base64": {
          "$ref": "#/definitions/helpers:string-or-directive"
        }
      },
      "required": [
        "@base64"
      ],
      "additionalProperties": false
    },
    "directive:field": {
      "type": "object",
      "properties": {
        "@field": {
          "$ref": "#/definitions/helpers:string-or-directive"
        }
      },
      "required": [
        "@field"
      ],
      "additionalProperties": false
    },
    "directive:handlebars": {
      "type": "object",
      "properties": {
        "@handlebars": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "$ref": "#/definitions/directive"
            }
          ]
        }
      },
      "required": [
        "@handlebars"
      ],
      "additionalProperties": false
    },
    "directive:lowercase": {
      "type": "object",
      "properties": {
        "@lowercase": {
          "$ref": "#/definitions/helpers:string-or-directive"
        }
      },
      "required": [
        "@lowercase"
      ],
      "additionalProperties": false
    },
    "directive:merge": {
      "type": "object",
      "properties": {
        "@merge": {
          "type": "array",
          "items": {
            "oneOf": [
              {
                "$ref": "#/definitions/directive"
              },
              {
                "$ref": "#/definitions/raw:object"
              }
            ]
          }
        }
      },
      "required": [
        "@merge"
      ],
      "additionalProperties": false
    },
    "directive:omit": {
      "type": "object",
      "properties": {
        "@omit": {
          "$ref": "#/definitions/helpers:object-and-fields"
        }
      },
      "required": [
        "@omit"
      ],
      "additionalProperties": false
    },
    "directive:pick": {
      "type": "object",
      "properties": {
        "@pick": {
          "$ref": "#/definitions/helpers:object-and-fields"
        }
      },
      "required": [
        "@pick"
      ],
      "additionalProperties": false
    },
    "directive:root": {
      "type": "object",
      "properties": {
        "@root": {}
      },
      "required": [
        "@root"
      ],
      "additionalProperties": false
    },
    "directive:timestamp": {
      "type": "object",
      "properties": {
        "@timestamp": {
          "type": "object",
          "properties": {
            "timestamp": {
              "$ref": "#/definitions/helpers:string-or-directive"
            },
            "format": {
              "$ref": "#/definitions/helpers:string-or-directive"
            }
          },
          "required": [
            "timestamp",
            "format"
          ],
          "additionalProperties": false
        }
      },
      "required": [
        "@timestamp"
      ],
      "additionalProperties": false
    },
    "helpers:string-or-directive": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "$ref": "#/definitions/directive"
        }
      ]
    },
    "helpers:object-and-fields": {
      "type": "object",
      "properties": {
        "object": {
          "oneOf": [
            {
              "$ref": "#/definitions/raw:object"
            },
            {
              "$ref": "#/definitions/directive"
            }
          ]
        },
        "fields": {
          "oneOf": [
            {
              "type": "array",
              "items": {
                "oneOf": [
                  {
                    "type": "string"
                  },
                  {
                    "$ref": "#/definitions/directive"
                  }
                ]
              }
            },
            {
              "$ref": "#/definitions/directive"
            }
          ]
        }
      },
      "required": [
        "object",
        "fields"
      ],
      "additionalProperties": false
    }
  }
}