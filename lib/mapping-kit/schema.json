{
  "$schema": "http://json-schema.org/schema#",
  "title": "Fab 5 mapping definition",
  "description": "A Fab 5 mapping is either a raw JSON value (object, string, etc.) or a directive, which is a mapping/transformation instruction that reduces to a raw JSON value.",
  "if": {
    "type": "object",
    "minProperties": 1,
    "propertyNames": {
      "pattern": "^@"
    }
  },
  "then": {
    "$ref": "#/definitions/directive"
  },
  "else": {
    "$ref": "#/definitions/raw"
  },
  "definitions": {
    "raw": {
      "oneOf": [
        {
          "$ref": "#/definitions/raw:object"
        },
        {
          "not": {
            "type": "object"
          }
        }
      ]
    },
    "raw:object": {
      "type": "object",
      "propertyNames": {
        "pattern": "^[^@]"
      },
      "additionalProperties": {
        "oneOf": [
          {
            "$ref": "#/definitions/directive"
          },
          {
            "$ref": "#/definitions/raw"
          }
        ]
      }
    },
    "directive": {
      "type": "object",
      "minProperties": 1,
      "maxProperties": 1,
      "oneOf": [
        {
          "$ref": "#/definitions/directive:field"
        },
        {
          "$ref": "#/definitions/directive:handlebars"
        },
        {
          "$ref": "#/definitions/directive:merge"
        }
      ]
    },
    "directive:field": {
      "type": "object",
      "properties": {
        "@field": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "$ref": "#/definitions/directive"
            }
          ]
        }
      },
      "required": [
        "@field"
      ],
      "additionalProperties": false
    },
    "directive:handlebars": {
      "type": "object",
      "properties": {
        "@handlebars": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "$ref": "#/definitions/directive"
            }
          ]
        }
      },
      "required": [
        "@handlebars"
      ],
      "additionalProperties": false
    },
    "directive:merge": {
      "type": "object",
      "properties": {
        "@merge": {
          "type": "array",
          "items": {
            "oneOf": [
              {
                "$ref": "#/definitions/directive"
              },
              {
                "$ref": "#/definitions/raw:object"
              }
            ]
          }
        }
      },
      "required": [
        "@merge"
      ],
      "additionalProperties": false
    }
  }
}