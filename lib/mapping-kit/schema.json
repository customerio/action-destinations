{
  "$schema": "http://json-schema.org/schema#",
  "title": "Fab 5 mapping definition",
  "description": "A Fab 5 mapping is either a raw JSON value (object, string, etc.) or a directive, which is a mapping/transformation instruction that reduces to a raw JSON value.",
  "$ref": "#/definitions/helpers:directive-or-raw",
  "definitions": {
    "raw": {
      "oneOf": [
        {
          "$ref": "#/definitions/raw:object"
        },
        {
          "not": {
            "type": "object"
          }
        }
      ]
    },
    "raw:object": {
      "type": "object",
      "propertyNames": {
        "pattern": "^[^@]"
      },
      "additionalProperties": {
        "oneOf": [
          {
            "$ref": "#/definitions/directive"
          },
          {
            "$ref": "#/definitions/raw"
          }
        ]
      }
    },
    "directive": {
      "type": "object",
      "minProperties": 1,
      "maxProperties": 1,
      "oneOf": [
        {
          "$ref": "#/definitions/directive:base64"
        },
        {
          "$ref": "#/definitions/directive:if"
        },
        {
          "$ref": "#/definitions/directive:json"
        },
        {
          "$ref": "#/definitions/directive:lowercase"
        },
        {
          "$ref": "#/definitions/directive:merge"
        },
        {
          "$ref": "#/definitions/directive:omit"
        },
        {
          "$ref": "#/definitions/directive:path"
        },
        {
          "$ref": "#/definitions/directive:pick"
        },
        {
          "$ref": "#/definitions/directive:root"
        },
        {
          "$ref": "#/definitions/directive:template"
        },
        {
          "$ref": "#/definitions/directive:timestamp"
        },
        {
          "$ref": "#/definitions/directive:uuid"
        }
      ]
    },
    "directive:base64": {
      "type": "object",
      "properties": {
        "@base64": {
          "$ref": "#/definitions/helpers:string-or-directive"
        }
      },
      "required": [
        "@base64"
      ],
      "additionalProperties": false
    },
    "directive:if": {
      "type": "object",
      "properties": {
        "@if": {
          "properties": {
            "exists": {
              "$ref": "#/definitions/helpers:directive-or-raw"
            },
            "true": {
              "$ref": "#/definitions/helpers:directive-or-raw"
            },
            "then": {
              "$ref": "#/definitions/helpers:directive-or-raw"
            },
            "else": {
              "$ref": "#/definitions/helpers:directive-or-raw"
            }
          }
        }
      },
      "required": [
        "@if"
      ],
      "additionalProperties": false
    },
    "directive:json": {
      "type": "object",
      "properties": {
        "@json": {
          "$ref": "#/definitions/helpers:directive-or-raw"
        }
      },
      "required": [
        "@json"
      ],
      "additionalProperties": false
    },
    "directive:lowercase": {
      "type": "object",
      "properties": {
        "@lowercase": {
          "$ref": "#/definitions/helpers:string-or-directive"
        }
      },
      "required": [
        "@lowercase"
      ],
      "additionalProperties": false
    },
    "directive:merge": {
      "type": "object",
      "properties": {
        "@merge": {
          "type": "array",
          "items": {
            "oneOf": [
              {
                "$ref": "#/definitions/directive"
              },
              {
                "$ref": "#/definitions/raw:object"
              }
            ]
          }
        }
      },
      "required": [
        "@merge"
      ],
      "additionalProperties": false
    },
    "directive:omit": {
      "type": "object",
      "properties": {
        "@omit": {
          "$ref": "#/definitions/helpers:object-and-fields"
        }
      },
      "required": [
        "@omit"
      ],
      "additionalProperties": false
    },
    "directive:path": {
      "type": "object",
      "properties": {
        "@path": {
          "$ref": "#/definitions/helpers:string-or-directive"
        }
      },
      "required": [
        "@path"
      ],
      "additionalProperties": false
    },
    "directive:pick": {
      "type": "object",
      "properties": {
        "@pick": {
          "$ref": "#/definitions/helpers:object-and-fields"
        }
      },
      "required": [
        "@pick"
      ],
      "additionalProperties": false
    },
    "directive:root": {
      "type": "object",
      "properties": {
        "@root": {}
      },
      "required": [
        "@root"
      ],
      "additionalProperties": false
    },
    "directive:template": {
      "type": "object",
      "properties": {
        "@template": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "$ref": "#/definitions/directive"
            }
          ]
        }
      },
      "required": [
        "@template"
      ],
      "additionalProperties": false
    },
    "directive:timestamp": {
      "type": "object",
      "properties": {
        "@timestamp": {
          "type": "object",
          "properties": {
            "timestamp": {
              "$ref": "#/definitions/helpers:string-or-directive"
            },
            "inputFormat": {
              "$ref": "#/definitions/helpers:string-or-directive"
            },
            "format": {
              "$ref": "#/definitions/helpers:string-or-directive"
            }
          },
          "required": [
            "timestamp",
            "format"
          ],
          "additionalProperties": false
        }
      },
      "required": [
        "@timestamp"
      ],
      "additionalProperties": false
    },
    "directive:uuid": {
      "type": "object",
      "properties": {
        "@uuid": {}
      },
      "required": [
        "@uuid"
      ],
      "additionalProperties": false
    },
    "helpers:directive-or-raw": {
      "if": {
        "type": "object",
        "minProperties": 1,
        "propertyNames": {
          "pattern": "^@"
        }
      },
      "then": {
        "$ref": "#/definitions/directive"
      },
      "else": {
        "$ref": "#/definitions/raw"
      }
    },
    "helpers:string-or-directive": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "$ref": "#/definitions/directive"
        }
      ]
    },
    "helpers:object-and-fields": {
      "type": "object",
      "properties": {
        "object": {
          "oneOf": [
            {
              "$ref": "#/definitions/raw:object"
            },
            {
              "$ref": "#/definitions/directive"
            }
          ]
        },
        "fields": {
          "oneOf": [
            {
              "type": "array",
              "items": {
                "oneOf": [
                  {
                    "type": "string"
                  },
                  {
                    "$ref": "#/definitions/directive"
                  }
                ]
              }
            },
            {
              "$ref": "#/definitions/directive"
            }
          ]
        }
      },
      "required": [
        "object",
        "fields"
      ],
      "additionalProperties": false
    }
  }
}
