{
  "name": "@segment/actions-server",
  "description": "Destination Actions + Ops express servers.",
  "version": "2.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/segmentio/fab-5-engine",
    "directory": "packages/server"
  },
  "main": "dist/src/app.js",
  "engines": {
    "node": ">=10.20"
  },
  "engineStrict": true,
  "private": true,
  "scripts": {
    "build": "yarn clean && yarn tsc -b tsconfig.build.json",
    "clean": "tsc -b tsconfig.build.json --clean",
    "postclean": "rm -rf dist",
    "dev": "NODE_ENV=development nodemon --inspect=47082 --watch 'src/**/*.ts' --exec node -e 'js,json,ts' --require ts-node/register/transpile-only src/app.ts",
    "dev:ops": "NODE_ENV=developement nodemon --inspect=47082 --watch 'src/**/*.ts' --exec node -e 'js,json,ts' --require ts-node/register/transpile-only src/ops/server.ts",
    "start": "node dist/src/app.js",
    "start:ops": "node dist/src/ops/server.js",
    "test": "jest",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/express": "^4.17.11",
    "@types/http-errors": "^1.8.0",
    "@types/ip": "^1.1.0",
    "@types/jest": "^26.0.20",
    "@types/lodash": "^4.14.168",
    "@types/module-alias": "^2.0.0",
    "@types/node": "^10.17.0",
    "@types/test-listen": "^1.1.0",
    "@types/whatwg-mimetype": "^2.1.0",
    "concurrently": "^5.0.0",
    "got": "^10.0.0",
    "jest": "^26.6.3",
    "nock": "^13.0.4",
    "nodemon": "^2.0.7",
    "test-listen": "^1.1.0",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1"
  },
  "dependencies": {
    "@segment/actions-core": "^2.0.2",
    "@segment/blocked-stats": "^2.2.0",
    "@segment/control-plane-service-client": "ssh://git@github.com:segmentio/control-plane-service-js-client#master",
    "@segment/destination-actions": "^2.1.0",
    "@segment/express-stats": "^1.3.1",
    "@sentry/integrations": "^5.27.3",
    "@sentry/node": "^5.27.3",
    "ecs-logs-js": "^1.0.0",
    "express": "^4.17.1",
    "http-errors": "^1.8.0",
    "ip": "^1.1.5",
    "lodash": "^4.17.20",
    "module-alias": "^2.2.2",
    "ow": "^0.19.0",
    "whatwg-mimetype": "^2.3.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/"
    ],
    "moduleNameMapper": {
      "@/(.+)": "<rootDir>/src/$1",
      "@segment/actions-core": "<rootDir>/../core/src/index.ts"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/test/setup-after-env.ts"
    ],
    "forceExit": true
  }
}
