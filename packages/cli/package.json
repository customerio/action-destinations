{
  "name": "@segment/actions-cli",
  "description": "CLI to interact with Segment integrations",
  "version": "2.0.2",
  "repository": {
    "type": "git",
    "url": "https://github.com/segmentio/fab-5-engine",
    "directory": "packages/cli"
  },
  "engines": {
    "node": ">=10.20"
  },
  "engineStrict": true,
  "bin": {
    "segment": "./bin/run"
  },
  "files": [
    "/bin",
    "/dist",
    "/oclif.manifest.json"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "private": true,
  "scripts": {
    "postpack": "rm -f oclif.manifest.json",
    "prepack": "yarn build && oclif-dev manifest && oclif-dev readme",
    "build": "yarn clean && yarn tsc -b tsconfig.build.json",
    "clean": "tsc -b tsconfig.build.json --clean",
    "postclean": "rm -rf dist",
    "create:destination": "npx segment init --directory packages/destination-actions/src/destinations",
    "create:action": "ts-node --transpile-only src/create-action",
    "sync-json-schemas": "ts-node --files -r tsconfig-paths/register src/sync-json-schemas",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@oclif/dev-cli": "^1",
    "@types/fs-extra": "^9.0.11",
    "@types/json-diff": "^0.5.1",
    "@types/json-schema": "^7.0.7",
    "@types/lodash": "^4.14.168",
    "@types/mustache": "^4.1.0",
    "@types/node": "^10.17.0",
    "@types/prompts": "^2.0.9"
  },
  "dependencies": {
    "@oclif/command": "^1",
    "@oclif/config": "^1",
    "@oclif/errors": "^1",
    "@oclif/plugin-help": "^3",
    "@segment/actions-core": "^2.0.2",
    "@segment/control-plane-service-client": "ssh://git@github.com:segmentio/control-plane-service-js-client#master",
    "@segment/destination-actions": "^2.0.2",
    "fs-extra": "^9.1.0",
    "chalk": "^4.1.0",
    "execa": "^4.1.0",
    "globby": "^11.0.3",
    "json-diff": "^0.5.4",
    "json-schema-to-typescript": "^10.1.4",
    "lodash": "^4.17.20",
    "mustache": "^4.1.0",
    "ora": "^5.3.0",
    "prompts": "^2.4.0",
    "slugify": "^1.4.6",
    "tsconfig-paths": "^3.9.0",
    "tslib": "^2"
  },
  "oclif": {
    "commands": "./dist/commands",
    "bin": "segment",
    "plugins": [
      "@oclif/plugin-help"
    ],
    "topics": {
      "generate": {
        "description": "scaffold resources or types for an integration"
      }
    }
  }
}
